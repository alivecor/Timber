/* CUSTOM NAV */
header.navigation {
  background-color: #fff;
  min-height: 40px;
  height: 55px;
  margin: 0 auto;
  z-index: 1002;
  /*//transitions for resize nav*/
  -webkit-transition: height 0.3s;
  -moz-transition: height 0.3s;
  -ms-transition: height 0.3s;
  -o-transition: height 0.3s;
  transition: height 0.3s;
  /*//sticky styles*/
  position: fixed;
  width: 100%;
  right: 0;
  left: 0;
  top: 0;
  -webkit-box-flex: 0;
  -webkit-flex: none;
  flex: none;
  &.home-banner {
    height: $navigation-height-home;
  }
  @media (min-width: 768px) {
    height: $navigation-height-tablet;
    &.home-banner {
      height: $navigation-height-tablet-home;
    }
  }
  @media (min-width: 1200px) {
    height: $navigation-height-horizontal;
    &.home-banner {
      height: $navigation-height-horizontal-home;
    }
  }
  
  &.scrolled-nav {
    border-bottom: 1px solid #dcdfde;
    height: 55px;
    @media (min-width: 1200px) {
        height: 70px;
        border-bottom: 1px solid #dcdfde;
        .navigation-wrapper {
          padding-top: 9px;
          svg {
            margin-top: 14px;
          }
        }
      }
    nav {
      margin-top: 1px;
    }
    ul li.nav-link.free-ship {
      visibility: hidden;
      opacity: 0;
    }
    .banner, .banner.red {
      visibility: hidden;
      opacity: 0;
      height: 0;
      padding: 0;
    }
  }
  .navigation-wrapper {
    margin-left: auto;
    margin-right: auto;
    z-index: 9999;
    padding-top: 20px;
    @media (min-width: 1200px) {
      position: relative;
      width: 1200px;
      padding-top: 56px;
      -webkit-transition: padding 0.3s;
      -moz-transition: padding 0.3s;
      -ms-transition: padding 0.3s;
      -o-transition: padding 0.3s;
      transition: padding 0.3s;
    }
  }
  .logo {
    @media (min-width: 1200px) {
      float: left;
      padding-left: 20px;
    }
    svg {
      width: 110px;
      height: 20px;
      -webkit-transition: margin 0.3s;
      -moz-transition: margin 0.3s;
      -ms-transition: margin 0.3s;
      -o-transition: margin 0.3s;
      transition: margin 0.3s;
      position: absolute;
      left: 0;
      right: 0;
      margin: -4px auto 0;
      @media (min-width: 1200px) {
        margin: 8px 0 0;
        width: 127px;
        height: 23px;
        position: relative;
      }
    }
  }
  /*// Mobile view*/
  .mobile-only {
    @media (min-width: 1200px) {
      display: none;
    }
    .navigation-menu-button, .mobile-buy .buy-now {
      line-height: 1;
      font-size: 14px;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .navigation-menu-button {
      color: #142a39;
      float: left;
      text-decoration: none;
      margin: -2px 0 0 20px;
    }
    .mobile-buy {
      float: right;
      margin-top: -12px;
      margin-right: 20px;
      @media (min-width: 1200px) {
        margin-top: -10px;
        margin-right: 0;
      }
    }
  }
  /*// Nav menu*/
  nav {
    float: none;
    min-height: 40px;
    z-index: 9999999;
    @media (min-width: 1200px) {
      float: right;
    }
  }
  #mobile-overlay {
    height: 0%;
    width: 100%;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #142a39;
    overflow-y: hidden;
    transition: 0.4s;
    @media (min-width: 1200px) {
      position: static;
      background-color: transparent;
      transition: none;
    }
  }
  #js-mobile-menu-close {
    position: absolute;
    top: 22px;
    left: 25px;
    height: 30px;
    width: 30px;
    cursor: pointer;
    @media (min-width: 1200px) {
      display: none;
    }
    &:after,
    &:before {
      position: absolute;
      top: 3px;
      right: 3px;
      bottom: 0;
      left: 50%;
      -webkit-transform: rotate(45deg);
      -moz-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      -o-transform: rotate(45deg);
      transform: rotate(45deg);
      height: 20px;
      width: 2px;
      background: #2D9F86;
      content: '';
      display: block;
    }
    &:hover:after,
    &:hover:before {
      background: #6bc1b6;
    }

    &:before {
      -webkit-transform: rotate(-45deg);
      -moz-transform: rotate(-45deg);
      -ms-transform: rotate(-45deg);
      -o-transform: rotate(-45deg);
      transform: rotate(-45deg);
    }
  }
  ul.navigation-menu {
    clear: both;
    display: none;
    margin: 0 auto;
    overflow-y: scroll;
    padding: 0;
    width: 100%;
    z-index: 9999;

    &.show {
      display: block;
      position: relative;
      top: 10%;
      width: 100%;
      text-align: center;
      overflow: hidden;
    }

    @media (min-width: 1200px) {
      display: inline;
      margin: 0;
      padding: 0;
    }
  }
  /*// The nav items*/
  ul li.nav-link {
    display: block;
    line-height: 36px;
    overflow: hidden;
    text-align: center;
    width: 100%;
    z-index: 9999;
    margin-bottom: 18px;
    &.active {
      a {
        color: #2d9f86;
      }
    }
    @media (max-height: 420px) {
      margin-bottom: 0;
    }
    @media (min-width: 1200px) {
      text-transform: uppercase;
      line-height: 40px;
      display: inline;
      text-decoration: none;
      padding-right: 24px;
      width: auto;
      margin-bottom: 0;
      &:last-of-type {
        padding-right: 0;
      }
    }
    &.free-ship {
      margin-top: 20px;
      opacity: 100;
      visibility: visible;
      -webkit-transition: all 0.3s;
      -moz-transition: all 0.3s;
      -ms-transition: all 0.3s;
      -o-transition: all 0.3s;
      transition: all 0.3s;
      color: #f15757;
      font-weight: 600;
      font-size: 14px;
      &:focus,
      &:hover {
        color: #f15757;
      }
      @media (min-width: 1200px) {
        margin-top: 0;
        position: absolute;
        top: 6px;
        right: 23px;
      }
    }
    &.no-mobile {
      display: none;
      @media (min-width: 1200px) {
        display: inline;
      }
    }
    a {
      color: #fff;
      font-weight: bold;
      display: inline-block;
      text-decoration: none;
      font-size: 20px;
      @media (min-width: 1200px) {
        color: #142a39;
        letter-spacing: .5px;
        font-size: 24px;
        width: auto;
        font-size: 14px;
      }

      &:focus,
      &:hover {
        color: #2d9f86;
      }
      &.buy-now {
        color: #fff;
        font-size: 12px;
      }
    }
  }
}

