<script type="text/javascript">
  function makeDecision() {
    var cartHeader = document.querySelector('.cart-header'),
      icons = document.querySelector('.benefit-icons-cart'),
      recommendedAccessories = document.querySelector('.recommended-accessories'),
      splitRow = document.querySelector('.splitRowTest'),
      checkoutHalf = document.querySelector('.splitRowCheckout'),
      updateCart = document.querySelector('.update-cart'),
      kbPremiumMsg = document.querySelector('.kb_premium_message'),
      secureBtn = document.querySelector('.secure-btn'),
      checkoutBtn = document.querySelector('.cartCheckout');

    switch (decision.location) {
      case "control":
        // banner on the top
        break;
      case "variation":
        // if items in cart
        if (icons) {
          // move secure btn closer to checkout
          checkoutHalf.insertBefore(secureBtn, updateCart);
          secureBtn.className += " iconTest";
          checkoutBtn.className += " iconTest";
          // banner below items
          var newDiv = document.createElement('div');
          newDiv.className = "grid__item medium--one-whole large--one-half iconTest";
          newDiv.appendChild(icons);
          splitRow.insertBefore(newDiv, checkoutHalf);
          checkoutHalf.className += " large--one-half medium--one-whole";
          cartHeader.className += " iconTest";
          cartHeader.innerHTML = 'Free Shipping & 30-Day Money Back Guarantee';
          if (recommendedAccessories) {
            recommendedAccessories.className += " iconTest";
          }
        }
        break;
      default:
        break;
    }
  }
  makeDecision();
  var cart = document.querySelector('.cart-wrapper');
  cart.style.visibility = 'visible';
</script>
