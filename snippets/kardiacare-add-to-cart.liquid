<form action="/cart/add" method="post" enctype="multipart/form-data" id="{{ product.id }}AddToCartForm1" class="AddToCartForm form-vertical">
 {% if product.variants.size > 1 %}
  {% comment %}
    If there are variants, show the user some choices via input controls, else we will hide the inputs
  {% endcomment %}
    {% assign has_checked = true %}
    {% unless product.selected_variant %}
      {% assign has_checked = false %}
    {% endunless %}
    <div class="kardiacare-products">
    {% for variant in product.variants %}
      {% if variant.available %}
        {% assign add_price = variant.price | minus: product.price %}
        <div class="kardiacare-options">
          <input type="radio"
             id="{{variant.id}}"
             name="id"
             data-sku="{{variant.sku}}"
             value="{{variant.id}}"
             class="kardiacare-radio"
             data-index="{{forloop.index0}}"
             data-img-url="{{variant.featured_image.src | img_url: 'large'}}"
             data-img-alt="{{variant.featured_image.alt}}"
             {% if has_checked == false or product.selected_variant.id == variant.id %}
               checked="true"
               {% assign has_checked = true %}
             {% endif %}
             >
          <label for="{{variant.id}}" class="kardiacare-options-label">
            <div class="label-text">
              <div class="checkmark">
                {% include 'icon-checkmark.svg' %}
              </div>
              {% if variant.title == '1 year' %}
              <h3>{{variant.price | money}} per year</h3>
              <p>(only $8.25/mo)</p>
              {% endif %}
              {% if variant.title == '2 year' %}
              <div class="kardiacare-ribbon">Best Value</div>
              <h3>{{variant.price | money}} for 2 years</h3>
              <p>(only $7.46/mo)</p>
              {% endif %}
            </div>
          </label>
        </div>
      {% else %}
        <div class="variant-input-wrapper">
        <input type="radio"
             class="variant-input"
             disabled>
        <label class="form-control out-of-stock">
          {{ variant.title }} ({{ 'products.product.sold_out' | t }})
        </label>
      </div>
      {% endif %}
    {% endfor %}
  </div>
  {% else %}
    {% for variant in product.variants %}
    <input type="hidden"
           id="{{variant.id}}"
           name="id"
           data-sku="{{variant.sku}}"
           value="{{variant.id}}"
           class="variant-input"
           data-index="{{forloop.index0}}"
           {% if forloop.first == true %}
             checked="true"
           {% endif %}
           >
    {% endfor %}
  {% endif %}

  {% comment %}
  <!-- removing quantities for now -->
  <label for="Quantity" class="quantity-selector">{{ 'products.product.quantity' | t }}</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1" class="quantity-selector">
  {% endcomment %}

  <button type="submit" name="add" id="{{product.id}}AddToCart1" class="btn addToCart" {% if sold_out %}disabled{% endif %}>
    <span id="AddToCartText">
    {% if sold_out %}
    {{ 'products.product.sold_out' | t }}
    {% elsif preorder %}
    {{ 'products.product.preorder' | t }}
    {% else %}
    {{ 'products.product.add_to_cart' | t }}
    {% endif %}
    </span>
  </button>
</form>