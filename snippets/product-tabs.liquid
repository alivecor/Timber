<div class="wrapper">
  <nav class="product-tabs">
    <ul>
      <li class="active tab" ><a href="#tab-1" data-target="#tab-1">Compatibility</a></li>
      <li class="tab"><a href="#tab-2" data-target="#tab-2">Tech Specs</a></li>
      <li class="tab"><a href="#tab-3" data-target="#tab-3">Reviews</a></li>
    </ul>
  </nav>
  <div class="targets clearfix">
    <div id="tab-1" class="target selected">
      {% include 'compatibility' %}
    </div>
    <div id="tab-2" class="target">
      {% include 'tech-specs' %}
    </div>
    <div id="tab-3" class="target">
      {% include 'reviews' product=product %}
    </div>
  </div>
</div>
<script>
  jQuery(function($) {
    $('.tab').on('click', function(e) {
      e.preventDefault();
      var target = $(e.target).data('target');
      $('.target').removeClass('selected');
      $(target).addClass('selected');
      $('.tab').removeClass('active');
      $(e.target).parent('li').addClass('active');
    });
  });
</script>
