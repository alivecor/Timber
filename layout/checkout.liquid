<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ shop.name }} - {{ page_title }}</title>

    {{ content_for_header }}

    <script>
      dataLayer = [];
    </script>

    {% include 'gtm-head' %}
    {% include 'omniconvert' %}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  </head>
  <body>
    {% include 'gtm-body' %}
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
          </div>
          <div class="main__content">
            {{ alternative_payment_methods }}
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
      </div>
    </div>

    {{ tracking_code }}
    <script>
      if (window.innerWidth > 999) {
        var discountField = document.getElementsByClassName('order-summary__section--discount')[0];
        var discountSection = document.getElementsByClassName('order-summary__sections')[0];
        if (discountField && discountSection) {
          var link = document.createElement('a');
          link.className = 'promoShowLink';
          link.onclick = function() {
            discountField.style.visibility = 'visible';
            link.style.display = 'none';
          }
          link.append('Promotional Code');
          discountSection.append(link);
          discountSection.append(discountField);
          discountField.style.visibility = 'hidden';
        }
        
      }
      if (window.location.href.indexOf('thank_you') > -1) {
        var productsArray = [],
          product_idsArray = [],
          productQuantityArray = [],
          productsString = '{{checkout.line_items | map: "title" | join: ','}}',
          product_idsString = '{{checkout.line_items | map: "product_id" | join: ','}}',
          productQuantityString = '{{checkout.line_items | map: "quantity" | join: ','}}';
        productsArray = productsString.split(',');
        product_idsArray = product_idsString.split(',');
        productQuantityArray = productQuantityString.split(',');

        var combinedProducts = [];
        for (var i = productsArray.length - 1; i >= 0; i--) {
          var addProd = {
            name: productsArray[i],
            productId: product_idsArray[i],
            quantity: productQuantityArray[i]
          }
          combinedProducts.push(addProd)
        }
        dataLayer.push({
          orderId: '{{ checkout.order_number }}',
          revenue: '{{ checkout.subtotal_price | money_without_currency }}',
          products: combinedProducts
        });
      }
    </script>
  </body>
</html>
