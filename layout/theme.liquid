<!doctype html>
<!--[if IE 8]><html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie9 no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<html lang="en">
<head>

  <!-- Basic page needs ================================================== -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  {% if settings.favicon_enable %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endif %}

  <!-- Title and description ================================================== -->
  <title>
  {{ page_title }}{% if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <script>
    dataLayer = [];
  </script>

  {% include 'gtm-head' %}

  <!-- Helpers ================================================== -->
  {% include 'social-meta-tags' %}
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">

  <!-- FONTS =============================================== -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Typekit fonts -->
  {% include 'typekit' %}

  <!-- CSS ================================================== -->
  {{ 'timber.scss.css' | asset_url | stylesheet_tag }}
  {{ 'styles.scss.css' | asset_url | stylesheet_tag }}

  <!-- Header hook for plugins ================================================== -->
  {{ content_for_header }}

  {% include 'oldIE-js' %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js' | script_tag }}
  {{ 'modernizr.min.js' | asset_url | script_tag }}

  {% comment %}
    If you store has customer accounts disabled, you can remove the following JS file
  {% endcomment %}
  {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {% endif %}

  <!-- Discount CODE from URL ================================================= -->
  {% include 'discount-code-head-script' %}

  <!-- Analytics ================================================= -->
  {% include 'analytics-scripts' %}

{% if product.metafields.inventory.ShappifyHidden == "true" %} {% endif %}

</head>

{% comment %}
  Add the page template as a class for easy page or template specific styling.
{% endcomment %}
<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | replace: '.', ' ' | truncatewords: 1, '' | handle }}{% if template == 'index' and shop.domain == 'store.alivecor.com' %} homepage{% endif %}{% if shop.domain == 'store.alivecor.com' %} en-us{% endif %}{% if shop.domain == 'store.alivecor.co.uk' %} en-gb{% endif %}" >
  <a href="#site-content" class="visuallyhidden screen-reader-only-focusable skip-to-content">Skip to content</a>
  {% include 'gtm-body' %}
  {% include 'discount-code-body' %}
  {% include 'navigation' %}
  {% if template == 'index' or template == 'product' %}
    {% include 'trust-banner' %}
  {% endif %}
  
  <div id="PageContainer" class="is-moved-by-drawer">
    <main id="site-content" class="{% if template != 'cart' %}wrapper {%else%}cart-wrapper {% endif %}main-content" role="main">

      {{ content_for_layout }}

    </main>
    {% include 'footer' %}
  </div>
  {% if shop.domain == 'store.alivecor.com' %}
    {% include 'cookie-banner' %}
  {% endif %}
  {% comment %} Modal for videos and shipping {% endcomment %}
  {% include 'modal' %}
  {% if template == 'cart' %}
    {% include 'omron-cart-upsell' %}
    {% include 'carrypod-cart-upsell' %}
    {% include 'kardiacare-cart-upsell' %}
    {% include 'kardiamobile-cart-upsell' %}
  {% endif %}
  <script src="https://cdn.jsdelivr.net/npm/js-cookie@2/src/js.cookie.min.js"></script>

  {{ 'fastclick.min.js' | asset_url | script_tag }}
  {{ 'timber.js' | asset_url | script_tag }}
  {{ 'main.js' | asset_url | script_tag }}
  {% if shop.domain == 'store.alivecor.com' %}
    <script src="https://js.maxmind.com/js/apis/geoip2/v2.1/geoip2.js" type="text/javascript"></script>
    {{ 'main-ca.js' | asset_url | script_tag }}
  {% endif %}

  {% comment %}
    Template-specific js
  {% endcomment %}
  
  <script>
    //if there's a promo banner add a class to the body so we can pad it
    var promoBannerPresent = $('#simplepromo_container').length > 0;
    if (promoBannerPresent) {
      $('body').addClass('promo-banner-present');
      window.setTimeout(function() {
        $('.shipping-icon').removeClass('hidden');
        $('.shipping-icon').prependTo('.bar p');
      }, 500);
    }

    {% if resetPassword %}
      $(function() {
        timber.resetPasswordSuccess();
      });
    {% endif %}
  </script>

  {% comment %}
    Ajaxify your cart with this plugin.
    Documentation:
      - http://shopify.com/timber#ajax-cart
  {% endcomment %}
  {% if settings.ajax_cart_method == "drawer" %}
    {{ 'handlebars.min.js' | asset_url | script_tag }}
    {% include 'ajax-cart-template' %}
    {{ 'ajax-cart.js' | asset_url | script_tag }}
    <script>
      jQuery(function($) {
        ajaxCart.init({
          formSelector: '.AddToCartForm',
          cartContainer: '#CartContainer',
          addToCartSelector: '#AddToCart',
          cartCountSelector: '#CartCount',
          cartCostSelector: '#CartCost',
          moneyFormat: {{ shop.money_format | json }}
        });

      });

      jQuery('body').on('ajaxCart.afterCartLoad', function(evt, cart) {
        // Bind to 'ajaxCart.afterCartLoad' to run any javascript after the cart has loaded in the DOM
        timber.RightDrawer.open();
      });
    </script>
  {% endif %}

  <img src="{{ 'icon_shipping.png' | asset_url }}" alt="free shipping icon" class="hidden shipping-icon">

  {% include 'discount-code-notifier' %}

<!-- Load vimeo api -->
{% if template == 'product' %}
<script src="https://player.vimeo.com/api/player.js"></script>
{% endif %}

{% if template == 'index' and shop.locale == 'en' %}
{{ 'compat-detect.js' | asset_url | script_tag }}
{% endif %}

{% comment %}stamped script{% endcomment %}
{% if shop.locale == 'en' %}
<script async type="text/javascript" data-api-key="" id="stamped-script-widget" src="https://cdn-stamped-io.azureedge.net/files/widget.min.js"></script>
{% endif %}

</body>
</html>
